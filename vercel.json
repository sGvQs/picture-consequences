{
  "version": 2,
  "builds": [
    {
      "src": "frontend/**",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build",
        "outputDirectory": "frontend/dist"
      }
    },
    {
      "src": "backend/**",
      "use": "@vercel/node"
    }
  ],
  "frameworks": {
    "node": {
      "version": "16.14.0",
      "bin": "node",
      "buildCommand": "npm run build",
      "devCommand": "npm run dev",
      "installCommand": "npm install --prefer-offline --no-audit --progress=false",
      "memory": 1024
    }
  }
}
